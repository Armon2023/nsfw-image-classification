//提示框的隐藏
function hideit() {
    $(".hideit").click(function () {
        $(this).fadeTo(200, 0.00, function () { //fade
            $(this).slideUp(300, function () { //slide up
                $(this).remove(); //then remove from the DOM
            });
        });
    });
}

