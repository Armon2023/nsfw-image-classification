body, html {
  height: 100%;
  -webkit-tap-highlight-color: transparent;
}
.line{
	border:1px dashed #ccc;
	margin-bottom:10px;
}
.demos-title {
  text-align: center;
  font-size: 30px;
  color: #ffffff;
  font-weight: 400;
  margin: 0 15%;
}

.demos-sub-title {
  text-align: center;
  color: #888;
  font-size: 14px;
}

.demos-header {
  padding: 35px 0 80px 0;
}

.demos-content-padded {
  padding: 15px;
}

.demos-second-title {
  text-align: center;
  font-size: 24px;
  color: #3cc51f;
  font-weight: 400;
  margin: 0 15%;
}

footer {
  text-align: center;
  font-size: 14px;
  padding: 20px;
}

footer a {
  color: #999;
  text-decoration: none;
}

a:hover{text-decoration:underline;color:#006bdc;} 
